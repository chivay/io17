{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error",
        "key-spacing": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "no-duplicate-imports": "error",
        "dot-location": [
            "error",
            "property"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-var": "error",
        "no-useless-rename": "error",
        "rest-spread-spacing": [
            "error",
            "never"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            120
        ],
        "no-trailing-spaces": "error",
        "nonblock-statement-body-position": [
            "error",
            "below"
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "no-useless-computed-key": "error",
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "comma-dangle": [
            "error",
            "never"
        ]
    }
}
